def getTotalDays(year):
    days = (31,28,31,30,31,31,31,31,30,30,31,31)
    total=0
    for d in days: total=total+d
    
    if (year%4==0) and (year%100!=0):
        total = total+1
        return total
    elif (year%100==0) and (year%400==0):
        total = total+1
        return total
    else:
        return total
             
