        # if result is > 4 match with previous
        # if counter = 4 stop loop
def prime_factors(n):
    i = 2
    factors = []
    while i * i <= n:
        if n % i:
            i += 1
        else:
            n //= i
            factors.append(i)
    if n > 1:
        factors.append(n)
    return factors     

def isPrime(x):
    for i in range(3,x): 
        if x % i == 0: return False
    return True       
    
if __name__ == "__main__": main()
